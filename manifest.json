{
  "name": "浏览助手",
  "version": "1.0.0",
  "description": "集成多个小功能的浏览助手",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "libs/jquery.min.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon/logo.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "libs/jquery.min.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon/logo.png"
  },
  "homepage_url": "https://github.com/tsluqn/bilibili-block",
  "manifest_version": 2
}